{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "node", // nodenext doesn't work with eslint-define-config
    "allowJs": true,
    "checkJs": true,
    // "declaration": true,
    // "emitDeclarationOnly": true,
    // "outFile": "index.js",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,

    // "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },
  "exclude": []
}
