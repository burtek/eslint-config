{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    // "declaration": true,
    // "emitDeclarationOnly": true,
    // "outFile": "index.js",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },
  "include": [
    "configs/**/*.js",
    "configs/**/*-types.ts",
    "tests/fixtures",
    "tests/*.ts",
    "eslint.config.js",
    "jest.config.js",
    "import-types.d.ts",
    "index.js",
  ]
}
