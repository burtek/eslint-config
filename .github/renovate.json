{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "labels": ["dependencies"],
  "assignees": ["@burtek"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": ["security"],
    "assignees": ["@burtek"]
  },
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "enabled": false
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    }
  ]
}
