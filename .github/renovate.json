{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "labels": ["dependencies"],
  "assignees": ["@burtek"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": ["security"],
    "assignees": ["@burtek"]
  },
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    },
    {
      "matchBaseBranches": ["eslint-v9"],
      "matchPackageNames": ["!/^(@types\\/)?eslint(-plugin-cypress)?$/"],
      "enabled": false
    },
    {
      "matchBaseBranches": ["eslint-v9"],
      "labels": ["dependencies", "v9"]
    }
  ]
}
